<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_rlay"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    tools:context="com.example.stevenyang.texaspokerproject.MainActivity">


    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/back"
        android:id="@+id/player1_1"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/back"
        android:id="@+id/player2_1"
        android:layout_alignTop="@+id/player1_1"
        android:layout_alignParentEnd="true"/>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/back"
        android:id="@+id/player1_2"
        android:layout_alignTop="@+id/player1_1"
        android:layout_alignParentEnd="true"/>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/back"
        android:id="@+id/player2_2"
        android:layout_alignTop="@+id/player1_1"
        android:layout_alignParentEnd="true"/>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/back"
        android:id="@+id/deck1"
        android:layout_alignTop="@+id/player1_1"
        android:layout_alignParentEnd="true"/>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/back"
        android:id="@+id/deck2"
        android:layout_alignTop="@+id/player1_1"
        android:layout_alignParentEnd="true"/>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/back"
        android:id="@+id/deck3"
        android:layout_alignTop="@+id/player1_1"
        android:layout_alignParentEnd="true"/>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/back"
        android:id="@+id/deck4"
        android:layout_alignTop="@+id/player1_1"
        android:layout_alignParentEnd="true"/>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/back"
        android:id="@+id/deck5"
        android:layout_alignTop="@+id/player1_1"
        android:layout_alignParentEnd="true"/>

    <Button
        android:text="call/fold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btnCall"/>

    <Button
        android:text="Raise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnCall"
        android:layout_alignStart="@+id/player1_1"
        android:id="@+id/btnRaise"/>

    <Button
        android:text="Look"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnLook"/>
</RelativeLayout>
